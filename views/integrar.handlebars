<div class="padre">
    <div class="hijo">
        <h3>Integrar nuevo producto</h3>
        <br>
        <form action="" class="justificado" method="post" id="form_integrar" onsubmit="integrar_producto(event)">
            <div class="form-group">
                <label for="">Código de barra</label>
                <input required class="form-control" placeholder="Código de barra" type="number" id="TXT_codigo_producto">
            </div>
            <div class="form-group">
                <label for="">Nombre del producto</label>
                <input required class="form-control" placeholder="Nombre" type="text" id="TXT_nombre_producto">
            </div>
            <div class="form-group">
                <label for="">Precio del producto $</label>
                <input min="0" onKeyPress="return soloNumeros(event)"  required class="form-control" placeholder="Precio $$" type="number" step="0.01" id="TXT_precio_producto">
            </div>
            <div class="form-group">
                <label for="">Existencia del producto</label>
                <input min="0" onKeyPress="return soloNumeros(event)"  required class="form-control" placeholder="Existencia" step="1" type="number" id="TXT_existencia_producto">
            </div>
            <button type="submit" class="btn btn-success">Guardar</button>
        </form>
    </div>
</div>
<script>
    window.addEventListener('load', activar('it1'))
</script>